<body>
<div class="all">
	<div class="upmenu">
		<span>Logged as {$user->identity->realname}</span>
		<a href="{link :Acl:Admin:Users:}">ACL</a>
	</div>
	<div class="extender">
		<div id="header">
	
			<a href="{link :Front:Files:list}" title="Home" class="menu-icon home-icon"></a>
			<a href="{link :Front:Lightboxes:list}" title="Lightboxes" class="menu-icon lightbox-icon"></a>
			<a href="{link :Users:Admin:Default:add}" title="Users admin" class="menu-icon users-icon"></a>
			<a href="{link :Projects:Admin:Default:add}" title="Projects admin" class="menu-icon projects-icon"></a>
			<a href="#" title="Client Packages" class="menu-icon client-package-icon"></a>
			<a href="{link :Users:Front:Default:edit}" title="Settings" class="menu-icon settings-icon"></a>
			<a href="{link :Front:Login:logout}" title="Logout" class="menu-icon logout-icon"></a>
			<a href="{link :RichText:Front:Default:detail 1}" title="Help" class="menu-icon help-icon"></a>

			<a href="#" title="Upload File(s)" class="menu-icon upload-icon"></a>
			
		</div>
		
		<div id="container">
		
			{snippet flashes 'div class="flashes"'}
				{foreach $flashes as $flash}<div class="flash {$flash->type}">{$flash->message}</div>{/foreach}
				{* todo:remove
				<div class="flash info">info msg really long long info msg really long long info msg really long long info msg really long long info msg really long long info msg really long long</div>
				<div class="flash error">error</div>
				<div class="flash success">success</div>
				<div class="flash warning">warning</div>
				*}
			{/snippet}
			
			<div class="filters-pannel">
				{snippet searchForm, 'div class="ib"'}
					{control searchForm}
					<a id="searchFormClearer" href="{link clearSearchForm!}" class="ajax" title="clear search"></a>
				{/snippet}
				
				{snippet menu, 'div class="filter-menu ib"'}
				<a href="{link :Front:Files:list filter=>null}" class="ajax{ifCurrent} active{/if}">All</a>
				<a href="{link :Front:Files:list filter=>FilesModel::FILTER_BY_VECTOR}" class="ajax{ifCurrent} active{/if}">Vector</a>
				<a href="{link :Front:Files:list filter=>FilesModel::FILTER_BY_BITMAP}" class="ajax{ifCurrent} active{/if}">Bitmap</a>
				<a href="{link :Front:Files:list filter=>FilesModel::FILTER_BY_INSPIRATION}" class="ajax{ifCurrent} active{/if}">Inspiration</a>
				<a href="{link :Projects:Front:Default:list filter=>null}" class="ajax{ifCurrent} active{/if}">Projects</a>
				{/snippet}
			</div>
			
			<div class="options-pannel">
				<span class="toggler"><span>Show</span> Options</span>
				<div class="options">
				{snippet options}
				{include #options}
				{/snippet}
				</div>
			</div>
			
			<div id="content">
<!--				<h1>Maga Design SVG Library</h1>-->
				
				{*control navigation*}

				<!--FILE UPLOAD-->
				<div class="fileUploadArea">
					{form fileUploadForm}
						{requiredPrefix null}
						{*<!--<p class="error" n:foreach="$formErrors as $error">{$error}</p>-->*}
						<div class="fileUpload-header">
						<!--<span>Select file</span>-->
							{input file}
						</div>
						<div class="invisible">
						{label projects_id} {input projects_id}
						{label tags} {input tags}
						{label complexity_id} {input complexity_id}
						</div>
						{input save}
					{/form}
		
					<table id="files">
						<!--<tr><td class="filesInfo"></td></tr>-->
					</table>
					
					<div class="fileUpload-footer">
						<div class="filesInfo"></div>
						<div class="action-buttons">
							<a href="#" class="cancelUpload">X</a>
							<button id="start_uploads" class="invisible">Upload files</button>
						</div>
						<div class="clear"></div>
					</div>
				</div> <!--end of fileUploadArea-->
				<!--FILE UPLOAD END-->
				
				{*control internalNavigation*}
	
				@{include #content}
			</div>
		</div>
		
	</div><!--end of .extender-->
	
	<div id="footer">
		{ifset $footerBgn}
			<div class="{$footerBgn}"></div>
			<div class="footerline"></div>
		{/if}
		<div class="text">
			<a class="masked" href="{link :Front:Login:login}">Â©</a> Maga Design Group 2011 | All rights reserved
		</div>
	</div>
</div><!--end of .all-->


<!--	components scripts and styles MUST BE AFTER #content => after rendering all components -->
{!$presenter->renderWebloaderFiles()}

</body>
</html>
