{block content}
<h1>{block #title}Users{/block} <a href="{plink Users:add}"><img src="{$assetsBasePath}/images/add.gif" height="19" width="19" title="Add user" alt="Add icon" /></a></h1>

{$form->render('begin')}
{$form->render('errors')}
<table>
    <tr><th>{$form['username']->getLabel()}</th><td>{$form['username']->getControl()}</td><td>{$form['search']->getControl()}</td></tr>
    <tr><td></td><td colspan="2">Examples: "John Doe", "John*", "%Doe"</td></tr>
</table>
{$form->render('end')}

{control paginator false, step}

<dl>
{foreach $users as $id => $user}
    <dt>{$user['name']} <a href="{plink Users:edit, $id}"><img src="{$assetsBasePath}/images/edit.gif" height="19" width="19" title="Edit user" alt="Edit icon" /></a>
        <a href="{plink Users:access, $id}"><img src="{$assetsBasePath}/images/access.gif" height="20" width="20" title="Show access for this user" alt="Access icon" /></a>
        <a href="{plink Users:delete, $id}"><img src="{$assetsBasePath}/images/delete.gif" height="19" width="19" title="Delete user" alt="Delete icon" /></a></dt>
        {if count($user['roles'])}<dd>{foreach $user['roles'] as $role}{$role}{if !$iterator->isLast()}, {/if}{/foreach}</dd>{/if}
{/foreach}
</dl>

{control paginator false, step}